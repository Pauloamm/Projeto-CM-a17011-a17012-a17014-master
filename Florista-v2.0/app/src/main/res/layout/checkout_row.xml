<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_checkout_background">

    <ImageView
        android:id="@+id/checkoutBouquetImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/checkoutBouquetNameView"
        android:layout_width="210dp"
        android:layout_height="29dp"
        android:layout_alignBottom="@+id/bouquetImageView"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/bouquetImageView"
        android:layout_toRightOf="@+id/bouquetImageView"
        android:text="badjoras"
        android:textColor="#183cb3"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/checkoutBouquetImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/checkoutBouquetFlowerDescription"
        android:layout_width="119dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/bouquetImageView"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/bouquetImageView"
        android:layout_toRightOf="@+id/bouquetImageView"
        android:text="FLOWERCOUNT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/checkoutBouquetImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/checkoutBouquetPrice"
        android:layout_width="173dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Preço: 400€"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkoutBouquetImageView" />

    <ImageButton
        android:id="@+id/checkoutPlusButton"
        android:layout_width="34dp"
        android:layout_height="38dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/list_checkout_plus_button"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bouquetFlowerCountView"
        android:layout_width="75dp"
        android:layout_height="17dp"
        android:layout_alignBottom="@+id/bouquetImageView"
        android:layout_marginEnd="44dp"
        android:layout_toEndOf="@+id/bouquetImageView"
        android:layout_toRightOf="@+id/bouquetImageView"
        android:text="FLOWERCOUNT"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/checkoutBouquetQuantity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toEndOf="@+id/bouquetImageView"
        app:layout_constraintTop_toBottomOf="@+id/bouquetNameView" />

    <TextView
        android:id="@+id/checkoutBouquetQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="8dp"
        android:text="1"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/checkoutPlusButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/checkoutMinusButton"
        android:layout_width="34dp"
        android:layout_height="38dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/list_checkout_minus_button"
        android:text="-"
        app:layout_constraintEnd_toStartOf="@+id/checkoutBouquetQuantity"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>